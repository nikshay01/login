class Solution {
public:
    int removeDuplicates(vector<int>& nums) {
        if (nums.empty())
            return 0;

        vector<int> numbers;
        int count = 1;

        numbers.push_back(nums[0]);

        for (int j = 1; j < nums.size(); j++) {
            if (nums[j] == nums[j - 1]) {
                count++;
            } else {
                count = 1;
            }

            if (count <= 2) {
                numbers.push_back(nums[j]);
            }
        }

        nums = numbers;
        return nums.size();
    }
};
